# EditorConfig for Nyros kernel project
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C/C++ source files
[*.{c,cpp,cc,cxx,h,hpp,hxx}]
indent_style = space
indent_size = 4
max_line_length = 100

# Assembly files
[*.{S,s,asm}]
indent_style = tab
indent_size = 8

# Linker scripts
[*.ld]
indent_style = space
indent_size = 2

# CMake files
[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 4
max_line_length = 100

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefiles (if any)
[Makefile]
indent_style = tab

# Configuration files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Git files
[.gitignore]
indent_style = space
indent_size = 2
